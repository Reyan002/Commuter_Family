<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    tools:context=".Fragments.SignUp.InfoFragment">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_back_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:src="@drawable/left_arrow" />

            <TextView
                android:id="@+id/textview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_back_2"
                android:layout_margin="6dp"
                android:text="Get Started"
                android:textColor="#000"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="3dp"
                android:inputType="text"
                android:hint="Name*"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_username"
                android:layout_marginBottom="3dp"
                android:inputType="textEmailAddress"
                android:hint="Email*"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/et_cnic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_email"
                android:layout_marginBottom="3dp"
                android:inputType="text"
                android:hint="CNIC No*"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_cnic"
                android:inputType="textPassword"
                android:layout_marginBottom="3dp"
                android:hint="Password*"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_confirm_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pass"
                android:layout_marginBottom="3dp"
                android:inputType="textPassword"
                android:hint="Confirm Password*"
                android:textSize="18sp" />


            <TextView
                android:visibility="gone"
                android:textSize="18dp"
                android:gravity="center"
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_below="@id/et_confirm_pass"
                android:text="Gender : "
                />

            <TextView
                android:visibility="gone"
                android:textSize="18dp"
                android:gravity="center"
                android:id="@+id/tv_gender_dettail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_toRightOf="@+id/tv_gender"
                android:layout_below="@id/et_confirm_pass"
                android:text="M/F"
                />


            <com.google.android.material.floatingactionbutton.FloatingActionButton

                android:id="@+id/btn_next_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
                />
        </RelativeLayout>

</FrameLayout>