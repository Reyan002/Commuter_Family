<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.IntroActivity">

    <TextView
        android:id="@+id/textSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:text="SKIP"
        android:textSize="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerIntro"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/textSkip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewPagerIntro"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_indicator"
        app:tabBackground="@drawable/dots_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/button_NxtInt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next "
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:drawableRight="@drawable/arrow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:drawableTint="@color/colorPrimary"/>

    <Button
        android:id="@+id/getStartBtn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textColor="@color/quantum_white_100"
        android:text="Get Started"
        android:textStyle="bold"
        android:background="@drawable/round_all_corners"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>